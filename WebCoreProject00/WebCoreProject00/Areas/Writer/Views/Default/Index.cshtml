@using EntityLayer.Concrete
@model List<Announcements>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{string color = ""; }
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Duyuru Türü</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {

                            if (x.Status == "Yeni Döküman")
                            {
                                color = "badge badge-danger";
                            }
                            if (x.Status == "Yeni Video")
                            {
                                color = "badge badge-warning";
                            }
                            if (x.Status == "Toplantı")
                            {
                                color = "badge badge-info";
                            }

                        <tr>
                            <th>@x.ID</th>
                            <td>@x.Title</td>
                            <td>@(((DateTime)x.Date).ToString("dd-MMM-yyyy"))</td>
                            <td><label class="@color">@x.Status</label></td>
                            <td><a href="/Writer/Default/AnnouncementsDetails/@x.ID" class="btn btn-primary">Detaylar</a></td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


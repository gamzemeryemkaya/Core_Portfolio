@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "InBoxMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kullanıcı(Yazar)-Admin Gelen Kutusu</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Gönderen</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Mesajı Gör</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var w in Model)
                        {
                            <tr>
                                <td>@w.WriterMessageID</td>
                                <td>@w.SenderName</td>
                                <td>@w.Subject</td>
                                <td>@w.Date</td>
                                <td><a href="/AdminMessage/AdminWriterMessageDelete/@w.WriterMessageID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/AdminMessage/AdminWriterMessageDetails/@w.WriterMessageID" class="btn btn-outline-info">Mesajı Gör</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-for="AdminWriterMessageSend" class="btn" style="background-color:lightgreen; color:black">Yeni Mesaj Oluştur</a>
            </div>
        </div>
    </div>
</div>

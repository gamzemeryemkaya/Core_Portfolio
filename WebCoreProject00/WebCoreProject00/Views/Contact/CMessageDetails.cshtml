@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "CMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Mesaj Detay Sayfası </p>
            <form class="forms-sample">
                <div class="form-group">
                    <label>ID</label>
                    @Html.TextBoxFor(x => x.MessageID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Mail</label>
                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Mesaj İçerik</label>
                    @Html.TextAreaFor(x => x.Content, 6, 4, new { @class = "form-control" })
                </div>
                <a asp-action="Index" class="btn btn-primary mr-2" style="background-color:cadetblue">İletişim-Mesaj Sayfası</a>
            </form>
        </div>
    </div>
</div>
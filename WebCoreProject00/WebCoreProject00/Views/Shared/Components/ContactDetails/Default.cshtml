@using EntityLayer.Concrete
@model List<Contact>
<div class="col-md-6" data-aos="fade-left" data-aos-delay="300">
    @foreach (var c in Model)
    {
    <div class="mt-3 px-1">
        <div class="h5">@c.Title</div>
        <p>@c.Describtion </p>
        <p>Görüşmek üzere!</p>
    </div>
        <div class="mt-53 px-1">
            <div class="row">
                <div class="col-sm-2">
                    <div class="pb-1">Mail:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder">@c.Mail</div>
                </div>
                <div class="col-sm-2">
                    <div class="pb-1">Telefon:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder">@c.Phone</div>
                </div>
            </div>
        </div>
    }
    </div>

